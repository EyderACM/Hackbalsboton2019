<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="DomoticaModel">
        <class>model.schemas.Device</class>
        <class>model.schemas.House</class>
        <class>model.schemas.Permission</class>
        <class>model.schemas.User</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/> 
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.229.149:3306/domotica_poo?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/> <!--db url-->
            <property name="javax.persistence.jdbc.user" value="pepe"/> <!--db username-->
            <property name="javax.persistence.jdbc.password" value="pepe"/> <!--db password-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>
</persistence>